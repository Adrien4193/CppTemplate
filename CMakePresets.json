{
    "version": 10,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/Build/${presetName}",
            "installDir": "${sourceDir}/Install/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl",
                "BUILD_SHARED_LIBS": true,
                "ENABLE_APPLICATIONS": true,
                "ENABLE_TESTS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "debug",
            "inherits": "default",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "inherits": "default",
            "configurePreset": "release"
        }
    ],
    "packagePresets": [
        {
            "name": "default",
            "hidden": true,
            "configurePreset": "release",
            "vendorName": "Adrien4193",
            "packageDirectory": "packages"
        },
        {
            "name": "zip",
            "inherits": "default",
            "generators": [
                "ZIP"
            ]
        },
        {
            "name": "nsis",
            "inherits": "default",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generators": [
                "NSIS64"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "release",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release"
                },
                {
                    "type": "test",
                    "name": "release"
                },
                {
                    "type": "package",
                    "name": "nsis"
                }
            ]
        }
    ]
}
